<!DOCTYPE html>
<html>
  <head>
    <title>BloggerHaHa</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= @notice %></p>
    <p class="alert"><%= @alert %></p>
    <nav class="nav">
      <%= render partial: "layouts/login" if current_user.nil? %>
      <%= render partial: "layouts/logout" unless current_user.nil? %>
    </nav>
    <%= yield %>
  </body>
</html>
